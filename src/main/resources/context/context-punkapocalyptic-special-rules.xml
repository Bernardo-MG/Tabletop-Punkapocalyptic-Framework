<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<!-- DEFAULT CONFIGURATION -->

	<context:property-placeholder
		location="classpath:context/punkapocalyptic-special-rules.properties"
		file-encoding="UTF-8" />

	<!-- SPECIAL RULES -->

	<bean id="automatic" class="${rule.automatic.class}" c:name="automatic" />

	<bean id="cumbersome" class="${rule.cumbersome.class}" c:name="cumbersome" />

	<bean id="dead_slow" class="${rule.deadslow.class}" c:name="dead_slow" />

	<bean id="firearm" class="${rule.firearm.class}" c:name="firearm" />

	<bean id="pellets" class="${rule.pellets.class}" c:name="pellets" />

	<bean id="two-handed" class="${rule.twohanded.class}" c:name="pellets" />

</beans>