<?xml version="1.0" encoding="UTF-8"?>
<special_rules xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="validation/punkapocalyptic-model-special-rule.xsd">
	<rule>
		<name>automatic</name>
	</rule>
	<rule>
		<name>cumbersome</name>
		<bonus_list>
			<bonus>
				<attribute>agility</attribute>
				<value>-1</value>
			</bonus>
		</bonus_list>
	</rule>
	<rule>
		<name>dead_slow</name>
	</rule>
	<rule>
		<name>firearm</name>
		<constraints>
			<constraint>bullets</constraint>
		</constraints>
	</rule>
	<rule>
		<name>hard_to_use</name>
		<bonus_list>
			<bonus>
				<attribute>precision</attribute>
				<value>-1</value>
			</bonus>
		</bonus_list>
	</rule>
	<rule>
		<name>pellets</name>
		<constraints>
			<constraint>no_avoid_cover</constraint>
			<constraint>no_aim_combat</constraint>
			<constraint>no_penalty_shoot_combat</constraint>
		</constraints>
		<bonus_list>
			<bonus>
				<attribute>precision</attribute>
				<value>1</value>
			</bonus>
		</bonus_list>
	</rule>
	<rule>
		<name>two-handed</name>
		<constraints>
			<constraint>two_weapon_slots</constraint>
		</constraints>
	</rule>
</special_rules>